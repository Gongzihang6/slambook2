{
    "version": "2.0.0",
    "tasks": [
        {
            // === 这是你原有的任务 (编译单个文件) ===
            // 注意：对于 Eigen 项目，这个任务通常会失败，因为它不知道头文件在哪
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false  // <--- 我把这里改成了 false，避免冲突
            },
            "detail": "Task generated by Debugger."
        },
        {
            // === 这是你需要新增的任务 (CMake 构建) ===
            // 这个 label 必须和 launch.json 里的 preLaunchTask 一致
            "label": "CMake: build",
            "type": "cmake",
            "command": "build", // 告诉 CMake 插件执行构建命令
            "group": {
                "kind": "build",
                "isDefault": true   // <--- 设为 true，按 Ctrl+Shift+B 会默认执行这个
            },
            "problemMatcher": [],
            "detail": "使用 CMake Tools 自动读取 CMakeLists.txt 进行编译"
        }
    ]
}